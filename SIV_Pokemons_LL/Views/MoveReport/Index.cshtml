@model IEnumerable<SIV_Pokemons_LL.Models.Reports.MoveReport>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                From
            </th>
            <th>
                To
            </th>
            <th>
                Theme
            </th>
            <th>
                Book report
            </th>
            <th>
                Book for read
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CellFromId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CellToId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThemeLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookReport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookForRead)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
